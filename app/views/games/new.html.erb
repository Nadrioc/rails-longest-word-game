<h1>New Game</h1>

<div class="box-container">
<% @array.each do |letter|%>
<ul>
<li class="blue-box"><%= letter %></li>
</ul>
<% end  %>
</div>

<form class="form-inline" method="post" action="/score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group mx-sm-3 mb-2">
    <input type="text" class="form-control" name="word" placeholder="Word here">
  </div>
  <button type="submit" class="btn blue mb-2">Play!</button>
  <input value="<%= @array.join %>" name="grid" type="hidden" />
</form>
